#!/bin/sh
# Give a battery name (e.g. BAT0) as an argument.

case $BLOCK_BUTTON in
    3) pgrep -x dunst >/dev/null && notify-send "<b>ğŸ”‹ Battery module:</b>
ï†¸: stagnant charge
ï‡¦: charging
ï‰€: charged
ï„ª : battery very low!
- Text color reflects charge left" ;;
esac

capacity=$(cat /sys/class/power_supply/"$1"/capacity) || exit
status=$(cat /sys/class/power_supply/"$1"/status)
batteryicon=""

if [ "$capacity" -ge 75 ]; then
	color="#00ff00"
	batteryicon="ï‰€"
elif [ "$capacity" -ge 50 ]; then
	color="#ffffff"
	batteryicon="ï‰"
elif [ "$capacity" -ge 15 ]; then
	color="#ffff00"
	batteryicon="ï‰ƒ"
else
	color="#ff0000"
	batteryicon="ï‰„"
	warn=" ï„ª "
fi

[ -z $warn ] && warn=" "

[ "$status" = "Charging" ] && color="#ffffff"

printf "<span color='%s'>%s%s%s</span>" "$color" "$(echo "$status" | sed -e "s/,//;s/Discharging/$batteryicon/;s/Not Charging/$batteryicon/;s/Charging/ï‡¦/;s/Unknown/ï†¸/;s/Full/ï‰€/;s/ 0*/ /g;s/ :/ /g")" "$warn" "$(echo "$capacity" | sed -e 's/$/%/')"

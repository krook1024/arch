#vim: ft=cfg
# Zathura settings
set sandbox none
#
set selection-clipboard clipboard

# Stop at page boundaries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

set statusbar-h-padding 0
set statusbar-v-padding 0

# Space between each page
set page-padding 1

# Keyboard mappings
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
map + zoom in
map - zoom out

# Main background
set default-bg "#2E3440"
set default-fg "#D8DEE9"

# Statusbar
set statusbar-bg "#ebdbb2"
set statusbar-fg "#282828"

# Recolor documents
set recolor 0
set recolor-darkcolor "#D8DEE9"
set recolor-lightcolor "#2E3440"
set recolor-reverse-video "true"

set guioptions ""

set scroll-step 50

unmap d

#vim: ft=cfg
# Zathura settings
set selection-clipboard clipboard

set statusbar-h-padding 0
set statusbar-v-padding 0

# Space between each page
set page-padding 1

# Keyboard mappings
map d toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
map + zoom in
map - zoom out

# Main background
# set default-bg "#282828"
set default-bg "#000000"
set default-fg "#ffffff"

# Statusbar
set statusbar-bg "#ebdbb2"
set statusbar-fg "#282828"

# Recolor documents
set recolor 1
set recolor-darkcolor "#ffffff"
#set recolor-lightcolor "#282828"
set recolor-lightcolor "#000000"

set guioptions ""

